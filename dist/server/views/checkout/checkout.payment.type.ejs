<div class="row">
    <div class="col-md-12">
        <div class="orange-header">
            Payment Type
        </div>
        <div class="greyborderbox">
            <div class="bg-light-grey">
                <i class="icon lock"></i>All card information is fully encrypted, secure and protected.
            </div>
            <div class="bg-white">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                        <div class="form-group radio-group">
                            <label><input type="radio" name="payment_type" value="credit_card" checked>Credit Card<span class="checkmark"></span></label>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 txt-right">
                        <img src="/images/icons/visa.png" class="icon-png">
                        <img src="/images/icons/master.png" class="icon-png">
                        <img src="/images/icons/ae.png" class="icon-png">
                    </div>
                </div>
            </div>
            <div class="bg-light-grey">
                <div class="row">
                    <div class="col-lg-6 col-md-8 col-sm-8">
                        <div class="form-group">
                            <label>Card Number <span class="required">*</span></label>
                            <input type="text" class="input-field input-s width-90" placeholder="Enter Hotel Name and Address" data-search=""><i class="icon lock marginTop-10px"></i>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-5 col-sm-5">
                        <div class="form-group">
                            <label>Expiry Date <span class="required">*</span></label><br>
                            <select class="selectpicker width-50" >
                                <option selected>Month</option>
                                <option>January</option>
                                <option>February</option>
                                <option>March</option>
                                <option>April</option>
                                <option>May</option>
                                <option>June</option>
                                <option>July</option>
                                <option>August</option>
                                <option>September</option>
                                <option>October</option>
                                <option>November</option>
                                <option>December</option>
                            </select>
                            <select class="selectpicker width-50" >
                                <option selected>Year</option>
                                <option>2018</option>
                                <option>2019</option>
                                <option>2020</option>
                                <option>2021</option>
                                <option>2022</option>
                                <option>2023</option>
                                <option>2024</option>
                                <option>2025</option>
                                <option>2026</option>
                            </select>

                        </div>
                    </div>
                    <div class="col-lg-6 col-md-4 col-sm-3">
                        <div class="form-group">
                            <label>Security Code <i class="fas fa-information"></i><span class="required">*</span></label>
                            <input type="text" class="input-field input-s" placeholder="E.g. age 5" data-search="">
                        </div>
                    </div>
                </div>
            </div>
            <div class="bg-white marginBottom-15px">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-xs-6">
                        <div class="form-group radio-group">
                            <label><input type="radio" name="payment_type" value="credit_card">PayPal<span class="checkmark"></span></label>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-xs-6 txt-right">
                        <img src="/images/icons/paypal.png" class="icon-png">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
