    <div class="section-background">
        <div class="overlay-content">
            <div class="bg-container">
                <% if (locale == 'zh-hk' || locale == 'zh-cn') { %>
                    <img src="/images/banner_faysim_tc.jpg" class="bg except-mobile-v">
                    <img src="/images/banner_faysim_mobile_tc.jpg" class="bg mobile-v">
