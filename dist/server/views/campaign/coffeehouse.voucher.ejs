<section class="section voucher">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 col-md-offset-2 col-sm-offset-1 col-sm-3 col-xs-offset-0 col-xs-4 txt-right">
                <img src="/images/logo/logo_coffee_house.png" data-aos="fade-up" data-aos-duration="800">
            </div>
            <div class="col-md-6 col-sm-7 col-xs-8">
                <h5 data-aos="fade-up" data-aos-duration="800">
                    <%= translations['campaign.coffeehouse.voucher.intro'] %>
                </h5>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12 txt-center">
                <h3 class="title">
                    <%- translations['campaign.coffeehouse.voucher.desc'] %>
                </h3>
                <a class="btn btn-lg btn-voucher" data-aos="zoom-in" data-aos-duration="800">
                    <%= translations['campaign.coffeehouse.voucher.where.coupon'] %>
                </a>
            </div>
        </div>
        <div id="voucherAddress" class="hide">
