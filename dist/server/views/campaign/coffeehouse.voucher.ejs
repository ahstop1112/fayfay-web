                        <div class="main-logo">
                            <img src="/images/campaign/coffeehouse/icon-voucher.png">
                        </div>
                        <h2><%= translations['campaign.coffeehouse.center.hours'] %></h2>
                    </div>
                    <div class="content-table">
                        <div class="title-address">
                            <%= translations['campaign.coffeehouse.address'] %>
                        </div>
                        <div class="title-time">
                            <%= translations['campaign.coffeehouse.working.hours'] %>
                        </div>
                        <div class="content-address">
                            <h6>Da Nang Information Center in Airport</h6>
                            <%= translations['campaign.coffeehouse.address'] %>: Da Nang International Airport
                        </div>
                        <div class="content-time">
                            9AM - 5 PM
                        </div>
                        <div class="content-address">
                            <h6>Da Nang Tourist Support Center in City Center</h6>
                            <%= translations['campaign.coffeehouse.address'] %>: 108 Bach Dang Street, Da Nang
                        </div>
                        <div class="content-time">
                            9AM - 5 PM
                        </div>
                        <div class="content-address">
                            <h6>The Moving Company Counter</h6>
                            <%= translations['campaign.coffeehouse.address'] %>: Column 1, 1st floor, Da Nang Domestic Airport
                        </div>
                        <div class="content-time">
                            9AM - 5 PM
                        </div>
                        <div class="content-address">
                            <h6>Ms. Sam Ao Dai Store in Da Nang</h6>
                            <%= translations['campaign.coffeehouse.address'] %>: 59 Tran Dinh Dan Street, Da Nang
                        </div>
                        <div class="content-time">
                            9AM - 5 PM
                        </div>
                         <div class="content-address">
                            <h6>Babylon Spa in Da Nang</h6>
                            <%= translations['campaign.coffeehouse.address'] %>: 30 Ha Bong, Son Tra, Da Nang
                        </div>
                        <div class="content-time">
                            9AM - 5 PM
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
