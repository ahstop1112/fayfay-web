<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="description" content="<%= campaignData.headerDescriptionMobile %>">
    <meta name="keywords" content="<%= campaignData.name %>">
    <title><%= campaignData.name %> | Fayfay.com</title>
    <meta property="og:image" content="<%= CLOUDINARY_IMAGE_URL_PREFIX %>/w_1200/<%= campaignData.ogMedia.key %>.<%=campaignData.ogMedia.format %>"/>
    <meta property="og:image:alt" content="<%= campaignData.ogTitle %>"/>
    <meta property="og:title" content="<%= campaignData.ogTitle %>"/>
    <meta property="og:description" content="<%= campaignData.headerDescriptionMobile %>"/>

    <% include ../include/gtm.header.ejs %>
    <% include ../include/css.ejs %>
    <link rel="stylesheet" type="text/css" href="/css/fathersday.css">
</head>

<body class="<%= locale%>">
<% include ../include/gtm.body.ejs %>
<div id="fathersday">
    <% include fathersday.header.ejs %>

    <section id="all">
        <div class="container-fluid">
            <div class="coupon-container">
                <div class="discount"></div>
                <div class="code">
                    <button class="btn btn-s copy-btn show" data-clipboard-action="copy" data-clipboard-text="FAYDAD5"
                            aria-label="<%= translations['campaign.common.copy'] %>">
                        <%= translations['campaign.common.copy'] %>
                    </button>
                    <span class="tooltiptext"><%= translations['campaign.common.copied'] %></span>
                </div>
            </div>
            <p class="content_p hidden-xs"><%- campaignData.headerDescription %></p>
            <p class="content_p visible-xs"><%- campaignData.headerDescriptionMobile %></p>

            <% if (campaignData.sections) { %>

                <% include dynamic-rectangle.icons.ejs %>

                <% campaignData.sections.forEach(function (section, index) { %>
                    <div class="section-experience  section<%=index%>">
                        <div class="experience-title section<%=index%>">
                            <div class="title-bg-left"></div>
                            <div class="title-bg">
                                <h2><%= section.name %></h2>
                            </div>
                            <div class="title-bg-right"></div>

                        </div>
                        <% if (section.brief){ %>
                            <div class="title-desc">
                                <%= section.brief %>
                            </div>
                        <% } %>

                        <% section.subSections.forEach(function (child, subIndex) { %>
                            <% switch (child.layout) {
                                case 'VERTICAL_LIST' : %>
                                    <% include dynamic-vertical.list.ejs %>
                                <% break;
                                case 'HORIZONTAL_LIST' : %>
                                    <% include dynamic-horizontal.list.ejs %>
                                <% break;
                                case '4_PLUS_1_HIGHLIGHTED_LEFT' : %>
                                    <% include dynamic-4plus1_highlighted_left.ejs %>
                                <% break;
                                case '4_PLUS_1_HIGHLIGHTED_RIGHT' : %>
                                    <% include dynamic-4plus1_highlighted_right.ejs %>
                                <% break;
                            } %>
                        <% })%>
                        <% if (section.seeMoreLink){ %>
                            <div class="btn-container">
                                <a class="btn btn-lg see-more" href="<%=section.seeMoreLink%>" target="_blank">
                                    <%= translations['campaign.common.see.more'] %>
                                </a>
                            </div>
                        <% } %>
                    </div>
                <% })%>
            <% } %>
            <p class="desc terms hidden-xs">
                <b><%-translations['campaign.common.terms.title']%></b><br>
                <%- campaignData.footerDescription %>
            </p>
            <p class="desc terms visible-xs">
                <b><%-translations['campaign.central.vietnam.travel.terms.title']%></b><br>
                <%- campaignData.footerDescriptionMobile %>
            </p>
        </div>
    </section>

    <% if (campaignData.sections) { %>
    <div class="floating-icons">
        <% campaignData.sections.forEach(function (section, index) { %>
            <div class="section<%=index%> <%=index===0 ? 'active' : ''%>">
                <% if (section.iconMedia ) { %>
                    <div class="address-icon" style="background-image: url('<%= CLOUDINARY_IMAGE_URL_PREFIX %>/<%=section.iconMedia.key%>.<%=section.iconMedia.format%>')"></div>
                <% } %>
                <h6><%=section.name %></h6>
            </div>
        <% })%>
    </div>
    <% } %>


    <% include campaign.destinations.ejs %>
    <% include ../include/footer.ejs %>
</div>

<% include ../include/js.ejs %>
<script src="/js/fathersday-bundle.js"></script>
<script>
    var clipboard = new ClipboardJS('.copy-btn');

    clipboard.on('success', function(e) {
        $('.tooltiptext').addClass("show");

        setTimeout(function() {
            $('.tooltiptext').removeClass("show");
        }, 3000);
    });
</script>
</body>
</html>

