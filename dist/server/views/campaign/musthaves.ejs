            <div class="daNang"><div class="address-icon"></div><h6><%= translations['campaign.musthaves.daNang.hoian'] %></h6></div>
            <div class="nhaTrang"><div class="address-icon"></div><h6><%= translations['activity.nhaTrang'] %></h6></div>
        </div>
        <% include ../include/footer.ejs %>
