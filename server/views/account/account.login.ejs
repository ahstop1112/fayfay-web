    <div class="row hidden-xs">
        <div class="col-md-4 col-md-offset-4">
            <img src="/images/logo_2.png" alt="Fayfay">
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <button id="btn-fb" class="btn btn-brand" onclick="checkLoginState()"><i class="icon-brand facebook"></i>Log In with Facebook</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
