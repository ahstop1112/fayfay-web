<!-- Package Option -->
<% for (let prop in tplData.packages ) { %>
    <div class="whitebox">
        <% if (prop == 0){ %>
            <h4><%= translations['package.option'] %></h4>
        <% } %>
        <% if (tplData.packages[prop].isSoldOut == false){ %>
            <div class="package-header">
        <% }else{ %>
            <div class="package-header soldout">
        <% } %>    
            <div class="package-title-price">
                <h5><%= tplData.packages[prop].title %></h5>
                <div class="package-price">
                    <span class="discount-price">HK$ <%= tplData.packages[prop].price %></span>
                    <!--<span class="ori-price">539</span>-->
                </div>
            </div>
            <div class="package-select">
                <% if (tplData.packages[prop].isSoldOut == false){ %>
                    <button class="btn btn-s white">
                        <%= translations['common.select'] %>
                    </button>
                <% }else{ %>
                    <button class="btn btn-s white" disabled>
                        <%= translations['package.sold.out'] %>
                    </button>
                <% } %>
            </div>
        </div>
        <hr>
        <div class="package-date">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="package-select-date">
                            <%= translations['common.select.date'] %>
                        </label>
                        <select class="form-control" id="package-select-date">
                            <option>31 Dec 2018</option>
                            <option selected>31 Dec 2018</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="package-select-time">
                            <%= translations['common.select.time'] %>
                        </label>
                        <select class="form-control" id="package-select-time">
                            <option>7:30pm</option>
                            <option>9:00pm</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="package-select-time">
                            <%= translations['package.quantity'] %>
                        </label>
                        <select class="form-control" id="package-select-time">
                            <option>Adult x 2, Child (3-11) x 1</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div class="package-details">
            <h6>
                <%= translations['package.details'] %><i class="fas fa-angle-down"></i>
            </h6>
            <p>Valid until 31 Dec 2018</p>
            <ul class="listing point">
                <li>Valid ln ly for passport holders of: People's Republic of China, Taiwan, Republic of Korea, Japan, Indonesia,
                    Malaysia, Pilippines, Singapore, Thailand, India, United States of America, Canada, Australia or New
                    Zealand</li>
            </ul>
            <h5>Inclusive Of:</h5>
            <ul class="listing point">
                <li>1 Day E-ticket</li>
                <li>HKD 100 coupon for souvenir purchasing</li>
            </ul>
        </div>
    </div>
    <% } %>