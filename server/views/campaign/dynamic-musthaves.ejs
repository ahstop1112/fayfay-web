<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="description" content="<%= translations['campaign.musthaves.desc'] %>">
    <meta name="keywords" content="<%= campaignData.ogTitle %>">
    <title><%= campaignData.ogTitle %> | Fayfay.com</title>
    <meta property="og:image" content="<%= CLOUDINARY_IMAGE_URL_PREFIX %>/<%= campaignData.ogMedia ? (campaignData.ogMedia.key+'.'+campaignData.ogMedia.format) : '' %>"/>
    <meta property="og:image:alt" content="<%= campaignData.ogTitle  %>"/>
    <meta property="og:title" content="<%= campaignData.ogTitle %>"/>
    <meta property="og:description" content="<%= translations['campaign.musthaves.desc'] %>"/>

    <% include ../include/gtm.header.ejs %>
    <% include ../include/css.ejs %>
    <link rel="stylesheet" type="text/css" href="/css/dynamic-musthaves.css">
</head>

<body class="<%= locale%>">
<% include ../include/gtm.body.ejs %>
    <div id="musthaves">
        <% include musthaves.header.ejs %>
        <section id="all">
            <div class="container-fluid">
                <p class="content_p"><%- translations['campaign.musthaves.desc']  %></p>
                <% include dynamic-circle.icons.ejs%>
            </div>
            <% include dynamic-vertical.list.ejs %>
        </section>
        <% include campaign.destinations.ejs %>

        <% if (campaignData.sections) { %>
        <div class="floating-icons">
            <% campaignData.sections.forEach(function (sub, index) { %>
            <div class="section<%=index+1%> <%=index===0 ? 'active' : ''%>"><div class="address-icon" style="background-image: url('<%= CLOUDINARY_IMAGE_URL_PREFIX %>/<%=sub.iconMedia.key%>.<%=sub.iconMedia.format%>')"></div><h6><%=sub.name %></h6></div>
            <% })%>
        </div>
        <% } %>
        <% include ../include/footer.ejs %>
    </div>

    <% include ../include/js.ejs %>
    <script src="/js/dynamic-musthaves-bundle.js"></script>
</body>
</html>
